# .env.example
# Copy this file to .env and fill in your actual values

# Google Cloud Platform (REQUIRED)
# Service account JSON for Speech-to-Text and Text-to-Speech
export GOOGLE_APPLICATION_CREDENTIALS_JSON='{"type":"service_account","project_id":"your-project-id",...}'

# Your Google Cloud Project ID
export GOOGLE_CLOUD_PROJECT_ID="your-project-id"

# API Key for Translation API
export GOOGLE_TRANSLATE_API_KEY="your-google-translate-api-key"

# Phoenix application settings
export PHX_HOST="localhost"
export PORT="4000"
export SECRET_KEY_BASE="generate-with-mix-phx.gen.secret"
export DATABASE_URL="ecto://postgres:postgres@localhost/altar_dev"

# Audio processing settings (optional - defaults are fine)
export AUDIO_CHUNK_DURATION_MS="2000"
export AUDIO_BUFFER_SIZE="5"
export AUDIO_SAMPLE_RATE="16000"